@model WeBloge.Domain.ViewModels.Admin.AddSocialViewModel

@{
    ViewData["Title"] = "افزودن شبکه های اجتمایی";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-xl-12">

        <div class="card">
            <div class="card-body">

                <!-- Tab panes -->
                <div class="tab-content p-3 text-muted">
                    <div class="tab-pane" id="revenue" role="tabpanel" style="position: relative;">
                        <div id="revenue-chart" class="apex-charts mt-4" style="min-height: 315px;"><div id="apexcharts0zaiaxdw" class="apexcharts-canvas apexcharts0zaiaxdw" style="width: 0px; height: 300px;"><svg id="SvgjsSvg1026" width="0" height="300" xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.com/svgjs" class="apexcharts-svg" xmlns:data="ApexChartsNS" transform="translate(0, 0)" style="background: transparent;"><g id="SvgjsG1029" class="apexcharts-annotations"></g><g id="SvgjsG1028" class="apexcharts-inner apexcharts-graphical"><defs id="SvgjsDefs1027"></defs></g></svg><div class="apexcharts-legend"></div></div></div>
                        <div class="resize-triggers"><div class="expand-trigger"><div style="width: 1px; height: 1px;"></div></div><div class="contract-trigger"></div></div>
                    </div>
                    <form asp-action="AddSocial">

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>فیسبوک</label>
                                    <input type="text" class="form-control" asp-for="Facebook" placeholder="ادرس فیسبوک را وارد کنید">
                                    <span class="text-danger m-1" asp-validation-for="Facebook"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>توییتر</label>
                                    <input type="text" class="form-control" asp-for="Twitter" placeholder="ادرس توییتر را وارد کنید">
                                    <span class="text-danger m-1" asp-validation-for="Twitter"></span>
                                </div>
                            </div> <!-- end col -->
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>اینستگرام</label>
                                    <input type="text" class="form-control" asp-for="Instagram" placeholder="ادرس اینستگرام را وارد کنید">
                                    <span class="text-danger m-1" asp-validation-for="Instagram"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>یوتیوب</label>
                                    <input type="text" class="form-control" asp-for="Youtube" placeholder="ادرس یوتیوب را وارد کنید">
                                    <span class="text-danger m-1" asp-validation-for="Youtube"></span>
                                </div>
                            </div> <!-- end col -->
                        </div>

                        <div class="pt-2">
                            <button type="submit" class="btn btn-primary btn-lg waves-effect waves-light">ویرایش اطلاعات</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

