@model WeBloge.Domain.Entities.Admin.Writer

@if (Model != null)
{
    <!--widget-author-->
    <div class="widget-author inner-width">
        <a href="javascript:%20void(0);" class="image">
            <img src="/content/gallery/@Model.Img" alt="">
        </a>
        <h6><span>سلام، من @Model.FirstName @Model.LastName هستم!</span></h6>
        <div class="link">@ViewBag.Count مقاله</div>
        <p>@Model.Description</p>
    </div>
}
else    
{
    <div class="col-lg-12">
        <div class="widget-author inner-width">
             <h6><span>شرمنده! نویسنده هنوز مشخصات خودش رو کامل نکرده.</span></h6>
        </div>
    </div>

}