@model WeBloge.Domain.ViewModels.Account.RegisterUserViewModel

@{
    ViewData["Title"] = "ثبت نام";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--register-->
<section class="section pt-55 mb-50">
    <div class="container-fluid">
        <div class="sign widget">
            <div class="section-title">
                <h5>ثبت نام</h5>
            </div>

            <form asp-action="Register" class="sign-form widget-form">
                <div class="form-group">

                    <input asp-for="Email" type="email" class="form-control" placeholder="آدرس ایمیل">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Captcha"/>

                <div class="form-group">
                    <button type="submit" value="Create" class="btn-custom">ثبت نام</button>
                </div>
                <p class="form-group text-center">حساب کاربری دارید؟ <a asp-action="Login" asp-controller="Account" class="btn-link">وارد شوید</a> </p>
            </form>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_CaptchaScripts" />
}