@model WeBloge.Domain.ViewModels.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "c";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--ForgotPassword-->
<section class="section pt-55 mb-50">
    <div class="container">
        <div class="sign widget ">
            <div class="section-title">
                <h5>بازیابی کلمه عبور</h5>
            </div>
            <form asp-action="ResetPassword" class="sign-form widget-form">
                <input type="hidden" asp-for="EmailActivationCode" class="form-control" />

                <div class="form-group">

                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Captcha" />

                <div class="form-group">
                    <button type="submit" class="btn-custom">تغییر رمز عبور</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts
{
        <partial name="_CaptchaScripts" />
}

