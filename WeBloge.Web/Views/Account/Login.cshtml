@model WeBloge.Domain.ViewModels.Account.LoginUserViewModel

@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Login-->
<section class="section pt-55 mb-50">
    <div class="container">
        <div class="sign widget ">
            <div class="section-title">
                <h5>ورود به حساب</h5>
            </div>
            <form asp-action="Login" class="sign-form widget-form">
                <div class="form-group">

                    <input asp-for="Email" type="email" class="form-control" placeholder="آدرس ایمیل">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="sign-controls form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                        <label class="custom-control-label" for="RememberMe">مرا بخاطر بسپار</label>
                    </div>
                    <a asp-action="ForgotPassword" asp-controller="Account" class="btn-link  ml-auto">رمز عبور خود را فراموش کرده اید؟</a>
                </div>

                <input type="hidden" asp-for="Captcha" />

                <div class="form-group">
                    <button type="submit" class="btn-custom">ورود به حساب</button>
                </div>

                <p class="form-group text-center">حساب کاربری ندارید؟ <a asp-action="Register" asp-controller="Account" class="btn-link">ثبت نام کنید</a> </p>

            </form>
        </div>
    </div>
</section>

@section Scripts
    {
    <partial name="_CaptchaScripts" />
}